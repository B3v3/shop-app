<div class="container">
  <div class="jumbotron">
  <%= form_for @new_tag do |f| %>
    <% if @new_tag.errors.any? %>
       <% @new_tag.errors.full_messages.each do |message| %>
         <div class="alert alert-danger" role="alert">
           <%= message %>
         </div>
       <% end %>
    <% end %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <%= f.submit "Submit", class: 'btn btn-success btn-lg btn-block' %>
  <% end %>
  </div>
</div>
