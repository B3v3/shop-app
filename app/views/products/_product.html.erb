<% if current_user && current_user.is_admin? %>
  <%= link_to "Edit product", edit_product_path(@product),
      class: 'btn btn-info btn-lg btn-block'%>
<% end %>

<h1 class="text-center">
  <%= @product.name %>
</h1>

<p class='text-center'>
  Price: <%= @product.price %> 
</p>

<p class="text-justify">
  <%= @product.description %>
</p>
