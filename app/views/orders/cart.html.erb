<% @ordered_products.each do |ordered_product| %>
  <%= link_to ordered_product.product.name, ordered_product.product %>

  <%= link_to 'Delete from Cart', ordered_product_path(ordered_product),
              data: {:confirm => 'Are you sure?'}, :method => :delete %>
  Price: <%= ordered_product.product.price %>
<% end %>

<p> Total price: <%= current_order.total_price %> </p>
<%= link_to 'Clear Cart', cart_path,
            data: {:confirm => 'Are you sure?'}, :method => :delete %>

<%= form_for current_order, url: cart_path do |f| %>
  <%= f.submit 'Buy' %>
<% end %>
